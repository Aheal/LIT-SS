<IfModule mod_rewrite.c>
    Options +FollowSymLinks

    RewriteEngine On    

    RewriteRule ^es$ index.php?idioma=es [L]
    RewriteRule ^en$ index.php?idioma=en [L]
    RewriteRule ^fr$ index.php?idioma=fr [L]

    #RewriteCond %{REQUEST_FILENAME} !-f
    #RewriteCond %{REQUEST_FILENAME} !-d

    RewriteRule ^(.+)/$ index.php?idioma=$1 [L]
    RewriteRule ^(.+)/inicio$ index.php?idioma=$1 [L]
    RewriteRule ^(.+)/seccion$ seccion.php?idioma=$1 [L]
    RewriteRule ^(.+)/historias$ historias.php?idioma=$1 [L]
    RewriteRule ^(.+)/contacto$ contacto.php?idioma=$1 [L]
    RewriteRule ^(.+)/blogs$ blogs.php?idioma=$1 [L]
    RewriteRule ^(.+)/acerca-de$ acerca-de.php?idioma=$1 [L]
    RewriteRule ^(.+)/articulos$ articulos.php?idioma=$1 [L]

    
    RewriteRule ^inicio$ index.php [L]
    RewriteRule ^seccion$ seccion.php [L]
    RewriteRule ^historias$ historias.php [L]
    RewriteRule ^contacto$ contacto.php [L]
    RewriteRule ^blogs$ blogs.php [L]
    RewriteRule ^acerca-de$ acerca-de.php [L]
    RewriteRule ^articulo$ articulo.php [L]
  

    ErrorDocument 404 /errors/404.html
    ErrorDocument 403 /errors/403.html
    ErrorDocument 400 /errors/400.html
    ErrorDocument 500 /errors/500.html
    
</IfModule>